<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/custom_refresh_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/custom_refresh_base_line"
        android:layout_marginEnd="5dp"
        app:SpinKit_Color="@color/colorPrimary"/>

    <View
        android:id="@+id/custom_refresh_base_line"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/custom_refresh_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/custom_refresh_base_line"
        android:layout_centerVertical="true"
        android:text="@string/loading_prepare"
        android:textSize="@dimen/smallTextSize"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="5dp" />

</RelativeLayout>